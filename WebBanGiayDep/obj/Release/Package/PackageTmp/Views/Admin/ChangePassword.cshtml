
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style type="text/css">
    .Left {
        color: #141414;
        text-align: right;
        padding-top: 22px;
    }

    .Right {
        width: 560px;
        padding-top: 22px;
        padding-left: 10px;
    }

    .getLine {
        border-top: 1px solid #D7EDFC;
        margin: auto;
        margin-top: 10px;
        width: 600px;
    }
</style>
@using (Html.BeginForm())
{
    <div class="login-wrap">
        <div class="login-content">
            <div class="login-logo">
                <a href="#">
                    <h4 style="color: black">ShopThaoNguyen</h4>
                </a>
            </div>
            <div class="login-form">
                <form action="" method="post">
                    <div class="form-group">
                        <label>Mật khẩu hiện tại</label>
                        <input type="password" id="txt_Password" name="txt_Password" class="au-input au-input--full" required="required" title="Mật khẩu hiện tại của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu mới</label>
                        <input type="password" id="txt_PasswordNew" name="txt_PasswordNew" class="au-input au-input--full" required="required" title="Mật khẩu mới của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
                    </div>
                    <div class="form-group">
                        <label>Xác nhận mật khẩu</label>
                        <input type="password" id="txt_NhapLaiPass" name="txt_NhapLaiPass" class="au-input au-input--full" required="required" title="Mật khẩu nhập lại của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
                    </div>
                    <input class="btn btn-success" id="NhapLai" type="reset" value="Nhập lại">
                    <input class="btn btn-success" type="submit" id="btn_Sumit" name="btn_Sumit" value="Xác nhận">
                </form>
            </div>
        </div>
    </div>
}

