@model WebBanGiayDep.Models.THUONGHIEU

@{
    ViewBag.Title = "XoaThuongHieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    dt {
        font-size: 16px
    }
</style>
<div class="wrap" style="padding-top:2%; padding-left:10%; padding-right:10%; padding-bottom:5%">
    <h2 style="text-align:center">XÁC NHẬN XÓA THÔNG TIN THƯƠNG HIỆU</h2>
    <br />
    <h2>Bạn quyết định xóa thương hiệu này?</h2>
    <br />
    <dl class="dl-horizontal">
        <dt>
            Tên thương hiệu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenThuongHieu)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" style="background-color: #4CAF50; color: white; font-size: 16px" />
        </div>
    }
    <br />
    @Html.ActionLink("Trở về trang thương hiệu", "ThuongHieu")
</div>
