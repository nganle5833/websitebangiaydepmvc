@model WebBanGiayDep.Models.NHACUNGCAP

@{
    ViewBag.Title = "XoaNhaCungCap";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    dt {
        font-size: 16px
    }
</style>
<div class="wrap" style="padding-top:2%; padding-left:10%; padding-right:10%; padding-bottom:5%">
    <h2 style="text-align:center">XÁC NHẬN XÓA THÔNG TIN NCC</h2>
    <br />
    <h2>Bạn quyết định xóa nhà cung cấp này?</h2>
    <br />
    <dl class="dl-horizontal">
        <dt>
           Tên nhà cung cấp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNCC)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>

        <dt>
           Trạng thái
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" style="background-color: #4CAF50; color: white; font-size: 16px" />
        </div>
    }
    <br />
    @Html.ActionLink("Trở về trang nhà cung cấp", "NhaCungCap")
</div>
