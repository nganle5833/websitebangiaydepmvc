@using WebBanGiayDep.Models
@using PagedList.Mvc
@model PagedList.PagedList<SANPHAM>
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="index-banner">
    <div class="wmuSlider example1" style="height: 560px;">
        @Html.Action("GiayMoi", "Home")
        <a class="wmuSliderPrev">Previous</a><a class="wmuSliderNext">Next</a>
        <ul class="wmuSliderPagination">
            <li><a href="#" class="">0</a></li>
            <li><a href="#" class="">1</a></li>
            <li><a href="#" class="wmuActive">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
        </ul>
        <a class="wmuSliderPrev">Previous</a><a class="wmuSliderNext">Next</a><ul class="wmuSliderPagination"><li><a href="#" class="wmuActive">0</a></li><li><a href="#" class="">1</a></li><li><a href="#" class="">2</a></li><li><a href="#" class="">3</a></li><li><a href="#" class="">4</a></li></ul>
    </div>
    <script src="~/Scripts/jquery.wmuSlider.js"></script>
    <script type="text/javascript" src="~/Scripts/modernizr.custom.min.js"></script>
    <script>
        $('.example1').wmuSlider();
    </script>
</div>
<div class="main">
    <div class="wrap">
        <div class="content-bottom" style=" padding-left: 20px; padding-right: 20px">
            @foreach (var item in Model)
            {
                <div class="box1">
                    <div class="col_1_of_3 span_1_of_3" style="margin: 0 20px 20px 0">
                        <a href="@Url.Action("ChiTietSanPham", "Home",new {id = item.MaGiay } )">
                            <div class="view view-fifth">
                                <div class="top_box">
                                    <h3 class="m_1">@item.TenGiay</h3>
                                    <div class="grid_img">
                                        <div class="css3"><img src="~/images/@item.AnhBia" style="width:173px; height:173px" alt="" /></div>
                                        <div class="mask">
                                            <div class="info">Xem thêm</div>
                                        </div>
                                    </div>
                                    <div class="price">@String.Format("{0:0,0}", item.GiaBan) VNĐ</div>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </a>
                    </div>
                </div>
            }

            <div class="clear"></div>
            <br />
            <div class="MenuTrang" style="text-align:center">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>