    @model WebBanGiayDep.Models.THUONGHIEU

@{
    ViewBag.Title = "ThemMoiThuongHieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="wrap" style="padding-top:2%; padding-left:10%; padding-right:10%; padding-bottom:5%">
    <h2 style="text-align:center">THÊM MỚI THƯƠNG HIỆU</h2>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="font-weight: bold; font-size: 16px">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
               Tên thương hiệu
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenThuongHieu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenThuongHieu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color: #4CAF50; color: white; font-size:16px" />
                </div>
            </div>
        </div>
    }
    <br />
    <div>
        @Html.ActionLink("Trở về trang thương hiệu", "ThuongHieu")
    </div>
</div>